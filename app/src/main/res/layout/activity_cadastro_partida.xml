<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_partida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.appees.appeesexerciciofinal.activities.CadastroPartida">

    <TextView
        android:text="Nome da Partida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNomePartida"
        android:layout_alignBaseline="@+id/editTextNomePartida"
        android:layout_alignBottom="@+id/editTextNomePartida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNomePartida"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewNomePartida"
        android:layout_toEndOf="@+id/textViewNomePartida" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextLocalPartida"
        android:layout_below="@+id/editTextNomePartida"
        android:layout_toRightOf="@+id/textViewLocalPartida"
        android:layout_toEndOf="@+id/textViewLocalPartida"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="Local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLocalPartida"
        android:layout_alignBaseline="@+id/editTextLocalPartida"
        android:layout_alignBottom="@+id/editTextLocalPartida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textViewNomePartida"
        android:layout_alignEnd="@+id/textViewNomePartida"
        android:textAlignment="center" />

    <TextView
        android:text="HorÃ¡rio da Partida:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQtdJogadores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:id="@+id/textViewDataPartida" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:ems="10"
        android:layout_below="@+id/textViewQtdJogadores"
        android:layout_toRightOf="@+id/textViewDataPartida"
        android:layout_marginTop="32dp"
        android:id="@+id/editTextDataPartida"
        android:layout_alignRight="@+id/editTextQtdJogadores"
        android:layout_alignEnd="@+id/editTextQtdJogadores" />

    <TextView
        android:text="Quantidade de Jogadores:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewQtdJogadores"
        android:layout_alignBaseline="@+id/editTextQtdJogadores"
        android:layout_alignBottom="@+id/editTextQtdJogadores"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/editTextQtdJogadores"
        android:layout_below="@+id/editTextLocalPartida"
        android:layout_toRightOf="@+id/textViewQtdJogadores"
        android:layout_alignRight="@+id/editTextLocalPartida"
        android:layout_alignEnd="@+id/editTextLocalPartida" />

    <Button
        android:text="Cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/buttonSalvarPartida"
        android:layout_below="@+id/editTextDataPartida"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
